<Window x:Class="WiredBrainCoffee.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiredBrainCoffee.UI.Wpf"
        mc:Ignorable="d"
        Title="Wired Brain Coffee" FontSize="20" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Cappuccino counter:" Margin="5 0"/>
        <TextBox x:Name="txtCappuccinoCounter" IsReadOnly="True" Margin="5" />
        <Button Content="Make Cappuccino"
                Click="ButtonMakeCappuccinoClick"
                HorizontalAlignment="Left"
                 Width="200" Margin="5" />
        <Button Content="Show Stored State"
                Click="ButtonShowStoredStateClick"
                HorizontalAlignment="Left"
                 Width="200" Margin="5" />

    </StackPanel>
</Window>
